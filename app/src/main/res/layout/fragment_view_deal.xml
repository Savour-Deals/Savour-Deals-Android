<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewDealFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".1"
            android:gravity="bottom"
            android:text="Vendor Name"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".05"
            android:gravity="top"
            android:text="Deal Description"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/dealImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight=".50"
            android:src="#00000000" />

        <TextView
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:layout_weight=".10"
            android:text="For dine in and carry out only. Not redeemable with any other promotions unless otherwise mentioned. This deal is only valid for one person. BOGO free items are for equal or lesser value. This deal has no cash value. You must be 21+ to redeem any alcohol deals."
            android:textAlignment="center"
            android:textSize="10sp" />

        <Button
            android:id="@+id/see_more"
            style="@android:style/Widget.Holo.Light.Button.Small"
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:layout_margin="5dp"
            android:layout_weight=".050"
            android:background="@drawable/primary_rounded"
            android:radius="20dp"
            android:text="See More"
            android:textColor="@color/colorText" />

        <Button
            android:id="@+id/redeem"
            style="@android:style/Widget.Holo.Light.Button.Small"
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:layout_margin="5dp"
            android:layout_weight=".05"
            android:background="@drawable/primary_rounded"
            android:radius="20dp"
            android:text="Redeem"
            android:textColor="@color/colorText" />
    </LinearLayout>


</FrameLayout>